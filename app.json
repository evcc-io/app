{
  "expo": {
    "name": "evcc",
    "slug": "evcc",
    "description": "open source solar charging",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon-dark.png",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "splash": {
        "image": "./assets/splash-light.png",
        "resizeMode": "cover",
        "backgroundColor": "#0FDE41",
        "dark": {
          "image": "./assets/splash-dark.png",
          "resizeMode": "cover",
          "backgroundColor": "#010322"
        }
      },
      "supportsTablet": true,
      "bundleIdentifier": "io.evcc.ios",
      "infoPlist": {
        "CFBundleLocalizations": ["de"],
        "CFBundleDevelopmentRegion": "de",
        "CFBundleAllowMixedLocalizations": true,
        "NSLocalNetworkUsageDescription": "Die App ben√∂tigt Zugriff auf das lokale Netzwerk, um deine evcc Instanz zu finden.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        },
        "NSBonjourServices": ["_http._tcp.", "_https._tcp."]
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "buildNumber": "7"
    },
    "android": {
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.CHANGE_WIFI_MULTICAST_STATE"
      ],
      "package": "io.evcc.android"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "build": {
        "babel": {
          "include": ["@ui-kitten/components"]
        }
      }
    },
    "locales": {
      "de": "./i18n/de.json"
    },
    "jsEngine": "jsc",
    "plugins": [
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ],
      "react-native-v8",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Montserrat-Bold.ttf",
            "./assets/fonts/Montserrat-Medium.ttf"
          ]
        }
      ],
      "expo-localization"
    ],
    "extra": {
      "eas": {
        "projectId": "b1b49826-1d85-42bf-997f-653600e16c51"
      }
    }
  }
}
